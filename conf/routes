# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# path for CORS
OPTIONS        /*path               controllers.Application.options(path)

# Home page
GET     /                           controllers.Application.index
GET     /api                        controllers.Application.api
GET     /api/contests               controllers.Contests.index
GET     /api/contests/:id           controllers.Contests.show(id: Long)
GET     /api/problems               controllers.Problems.showWithIds
GET     /api/problems/:id           controllers.Problems.show(id: Long)
GET     /api/user/:handle           controllers.Users.show(handle: String)

POST    /oauth2/access_token           controllers.OAuthController.accessToken

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
